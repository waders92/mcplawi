<div class="container">
    <% @events.each do |year, event| %>
    <h4 class="section-title big-year">Admin Portal</h4>
    <hr class="long-underline">
    <% event.each do |e| %>
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-6 event-details">
        <p class="section-title"><%= e.event_title %></p>
        <p>Course: <%= e.event_location %></p>
        <p>Date: <%= e.event_date %></p>
        <p>Cost: $<%= e.event_cost.round %></p>
        <p>Registrations: <%= e.total_registrations %></p>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-6 registration-area">
        <span><%= link_to 'Details', event_path(e), class: 'btn btn-primary btn-xs' %><%= link_to 'Edit', edit_event_path(e), class: 'btn btn-xs btn-primary' %><%= link_to 'Delete', event_path(e), class: 'btn btn-danger btn-xs', method: :delete, data: {confirm: 'Are you sure you want to delete this?'} %></span>
      </div>
    </div>
    <hr>
    <% end %>
    <% end %>
