      </ul>
      <div id="tabs-1">
        <p class="section-title">Members</p>
        <hr>
        <% @users.each.with_index do |user, index| %>
        <i><p><%= index + 1 %> - <%= user.last_name %>,&nbsp;<%= user.first_name %> - <%= user.email %></p></i>
