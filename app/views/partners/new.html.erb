<div class="container">
  <div class="form-style-8 modal-xl">
    <h2 style="margin-left: -30px; margin-right: -30px;">Add partner for <%= @event.event_title %></h2>
    <%= simple_form_for [@event, @partner] do |f| %>
      <%= f.error_notification %>
      <div class="row">
          <div class="col-md-6 field_with_errors">
            <%= f.input :first_name, required: true %><br>
            <%= f.input :last_name, required: true %><br>
          </div>
        </div>
      <br />
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
  