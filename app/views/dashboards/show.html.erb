<div class="profile col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <div class="user-profile-image">
    <center>
        <%= image_tag 'user.png', class: 'img-responsive user-image'%>
    </center>
  </div>
  <div class="row">
    <div class="profile-info">
        <p><i><%= current_user.first_name %>&nbsp;<%= current_user.last_name %></i></p>
        <p><i><%= current_user.home_club %></i></p>
        <p><i><%= current_user.email %></i></p>
        <hr>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-xs btn-primary edit-profile' %>
        <br><br>    
    </div>
  </div>
  <div id="user-tabs">
      <ul>
        <li><a href="#tabs-1">My Registrations</a></li>
        <li><a href="#tabs-3">MCPLAWI Posted Events</a></li>
      </ul>
      <div id="tabs-1">
        <p class="section-title">My Registrations</p>
        <hr class="medium-underline">
          <% current_user.registrations.each do |registration| %>
          <% current_user.registered_events.each do |event| %>
        <p><i>Event / When Registered</i></p><br>
        <p class='each-event'><%= event.event_title %>&nbsp;&nbsp;<%= registration.created_at %></p>
        <hr>
      <% end %>
      <% end %>
      </div>
      <div id="tabs-3">
        <% @event.each do |event| %>
        <div class="each-event">
          <p class="section-title"><%= event.event_title %></p>
          <p>Course: <%= event.event_location %></p>
          <p>Date: <%= event.event_date %></p>
          <p>Cost: $<%= event.event_cost.round %></p>
          <p>Time: <%= event.event_start_time %></p>
          <br>
          <% if current_user && current_user.registered_in?(event) %>
            <span><%= link_to 'Event Info', event_path(event) %><mark class="registered"><i>You are registered!</i></mark></span>
          <% else %>
            <%= link_to 'Event Info', event_path(event) %>
        </div>
        <hr>
        <% end %>
        <% end %>
      </div>
  </div>
</div>