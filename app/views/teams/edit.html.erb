<div class="container">
  <div class="form-style-8 modal-xl">
    <h2 style="margin-left: -30px; margin-right: -30px;">Edit Team Schedules!</h2>
    <%= simple_form_for @team do |f| %>
      <%= f.error_notification %>
        <div class="row">
          <div class="col-md-6">
              <%= f.input :team_schedule_info, :as => :text, :input_html => { :cols => 50, :rows => 15 }, required: true %><br>
          </div>
        </div>
      <br />
      <%= f.submit 'Update', class: 'btn btn-primary' %>
      <button onclick="window.history.go(-1); return false;" value="Back" class="btn btn-md btn-danger cancel-btn">Cancel</button>
    <% end %>
  </div>
</div>
