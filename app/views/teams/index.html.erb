<div class="container">
    <h2 class="main-section-title">Team Schedules</h2>
    <hr class="medium-underline">
    <% if current_user && current_user.admin? %>
    <div class="bottom-buffer">
      <%= link_to 'Add New Team Scehdule', new_team_path, class: 'btn btn-md btn-primary btn-minutes' %>
    </div>
    <% end %>
    <% if @teams.present? %>
      <% @teams.each do |year, team| %>
      <p class="section-title event-title"><%= year %></p>
        <% team.each do |t| %>
          <div class="event-details">
            <p style="white-space: pre-wrap;"><%= t.team_schedule_info %></p>
            <span>
              <% if current_user && current_user.admin? %>
              <%= link_to 'Edit', edit_team_path(t) %>
              &nbsp;&nbsp;
              <%= link_to 'Delete', team_path(t), method: :delete, data: {confirm: 'Are you sure you want to delete this?'} %>
              <% end %>
              <br>
            </span>
            <br>
          </div>
        <% end %>
      <% end %>
      <hr>
    <% end %>
  </div>
  