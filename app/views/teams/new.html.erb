<div class="container">
    <div class="form-style-8 modal-xl">
      <h2 style="margin-left: -30px; margin-right: -30px;">Add New Team Schedule!</h2>
      <%= simple_form_for @team do |f| %>
        <%= f.error_notification %>
          <div class="row">
            <div class="col-md-6">
              <%= f.input :team_schedule_info, :as => :text, :input_html => { :cols => 50, :rows => 15 }, required: true %><br>
            </div>
          </div>
        <br />
        <%= f.submit 'Create', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  