<div class="container">
  <div class="form-style-8 modal-xl">
    <h2 style="margin-left: -30px; margin-right: -30px;">Edit these Minutes!</h2>
    <%= simple_form_for @minute do |f| %>
      <%= f.error_notification %>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :title, required: true %><br>
          </div>
          <div class="col-md-6">
            <%= f.input :date, required: true, input_html: {class: "datepicker"}, as: :string %><br>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :pdf_file, require: true %>
          </div>
        </div>
      <br />
      <%= f.submit 'Update', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
