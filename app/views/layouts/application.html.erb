<!DOCTYPE html>
<html>
  <head>
    <title>Mcplawi</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-inverse" role="navigation" id="top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'MCPLAWI', root_path, class: 'navbar-brand' %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li><%= link_to 'Member Clubs', clubs_path %></li>
        <li><%= link_to 'Events', events_path %></li>
        <li><%= link_to 'My Profile', dashboards_path %></li>
        <% if current_user.admin? %>
            <li><%= link_to 'Admin', admin_path %></li>
        <% end %>
        <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to 'Our Clubs', clubs_path %></li>
        <li><%= link_to 'Events', events_path %></li>
        <li><%= link_to 'Sign-In', new_user_session_path %></li>
        <li><%= link_to 'Register', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<% if flash[:alert].present? || flash[:notice].present? %>
<div id="flash" class="notifications">
    <center>
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
    </center>
</div>
<% end %>

  <body>
    <%= yield %>
  </body>
</html>
